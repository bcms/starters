---
import { bcms } from '../bcms-client';
import type { BlogEntry } from '../../bcms/types/ts/entry/blog';
import type { HomePageEntry, HomePageEntryMetaItem } from '../../bcms/types/ts/entry/home-page';
import { blogToLite } from '../utils/blog';

import Layout from '../layouts/Layout.astro';
import HomeHero from '../components/home-page/Hero';
import BlogCard from '../components/blogs/Card';
import ArrowIcon from '../assets/icons/arrow.svg?raw'

const homePageEntry = (await bcms.entry.getBySlug(
  'home',
  'home-page',
)) as HomePageEntry;
const homePageMeta = homePageEntry.meta.en as HomePageEntryMetaItem
const blogs = (await bcms.entry.getAll('blog')) as BlogEntry[];

const liteBlogs = blogs.map((blog) => {
  return blogToLite(blog);
});
const featuredLiteBlogs = liteBlogs.filter((blog) => {
  return homePageMeta.featured_blogs.find(
    (e) => e.meta.en?.slug === blog.slug,
  );
});

const bcmsConfig = bcms.getConfig();
---

<Layout title={homePageMeta.title}>
	<div>
		<HomeHero
				client:load
				title={homePageMeta.hero_title}
				subtitle={homePageMeta.hero_subtitle}
				blogs={featuredLiteBlogs}
				bcmsConfig={bcmsConfig}
		/>
		<section class="pb-8 md:pb-20 lg:pb-[104px]">
				<div class="container">
						<div class="flex items-center justify-between mb-6 md:mb-8 lg:mb-10">
								<h2 class="leading-none font-medium tracking-[-0.41px] md:text-lg md:leading-none lg:text-[32px] lg:leading-none">
										Recent post
								</h2>
								<a
										href="/blog"
										class="flex items-center px-[15px] py-2.5 bg-appAccent rounded-[32px]"
								>
										<span class="text-sm leading-none tracking-[-0.41px] mr-1.5 md:text-base md:leading-none md:mr-2 lg:text-xl lg:leading-none">
												See all posts
										</span>
										<div class="w-[14px] h-[14px] md:w-4 md:h-4 lg:w-5 lg:h-5">
											<Fragment set:html={ArrowIcon} />
										</div>
								</a>
						</div>
						<div class="grid grid-cols-1 auto-rows-fr gap-6 p-4 border border-appGray-300 rounded-2xl md:grid-cols-2 lg:grid-cols-3 xl:gap-10 xl:p-8">
								{liteBlogs.map((blog, index) => (
										<BlogCard
												bcmsConfig={bcmsConfig}
												blog={blog}
										/>
								))}
						</div>
				</div>
		</section>
	</div>
</Layout>
