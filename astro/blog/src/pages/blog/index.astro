---
import { bcms } from '../../bcms-client';
import type { BlogEntry } from '../../../bcms/types/ts/entry/blog';
import type { BlogsPageEntry, BlogsPageEntryMetaItem } from '../../../bcms/types/ts/entry/blogs-page';
import { blogToLite } from '../../utils/blog';

import Layout from '../../layouts/Layout.astro';
import List from '../../components/blogs/List';
import { TopGradient } from '../../components/TopGradient';

const blogsPageEntry = (await bcms.entry.getBySlug(
    'blog',
    'blogs-page',
)) as BlogsPageEntry;
const blogsPageMeta = blogsPageEntry.meta.en as BlogsPageEntryMetaItem;
const blogs = (await bcms.entry.getAll('blog')) as BlogEntry[];
const blogsLite = blogs.map((blog) => blogToLite(blog));

const pageTitle = 'Happy reading for my amazing journey - Insightfull Ink';

const clientConfig = bcms.getConfig();
---

<Layout title={pageTitle}>
    <div>
        <div class="relative pt-10 pb-8 md:pt-[72px] md:pb-10 lg:pb-12">
            <div class="container">
                <div>
                    <div class="flex flex-col-reverse items-center text-center md:gap-4">
                        <h1 class="leading-none font-medium tracking-[-0.41px] md:text-2xl md:leading-none lg:text-[56px] lg:leading-none">
                            {blogsPageMeta.title}
                        </h1>
                        <h2 class="text-sm leading-none tracking-[-0.41px] text-appGray-600 mb-2.5 md:text-base md:leading-none lg:text-xl lg:leading-none lg:mb-5">
                            {blogsPageMeta.subtitle}
                        </h2>
                    </div>
                </div>
            </div>
            <TopGradient />
        </div>
        <List client:load blogs={blogsLite} bcmsConfig={clientConfig} />
    </div>
</Layout>
