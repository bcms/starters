---
import Footer from '../components/layout/Footer';
import Header from '../components/layout/Header';
import '../styles/fonts.css';

interface Props {
    title: string;
}

const { title } = Astro.props;
const ogImageUrl = '/thumbnail.jpg';
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta
            name="description"
            content="Jumpstart your Astro project with this BCMS starter. Easily manage your content and scale your application without the backend hassle. Get started now!"
        />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
        <meta name="generator" content={Astro.generator} />
        <meta property="og:image" content={ogImageUrl} />
        <meta property="og:image:secure_url" content={ogImageUrl} />
        <meta property="twitter:title" content="Tastyyy" />
        <meta property="twitter:card" content="summary_large_image" />
        <meta property="twitter:image" content={ogImageUrl} />
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Gloock&display=swap" rel="stylesheet">
        <title>{title}</title>
    </head>
    <body class="font-Helvetica overflow-x-hidden bg-appBody text-appText">
        <div class="overflow-hidden flex flex-col min-h-screen">
            <Header client:load />
            <main class="flex flex-col flex-1"><slot /></main>
            <Footer />
        </div>
    </body>
</html>

<style is:global>
@tailwind base;
@tailwind components;
@tailwind utilities;

*,
*::before,
*::after {
    @apply box-border m-0 p-0;
}

.homeHero--description * {
    display: inline;
}

.homeHero--description picture {
    display: inline-block;
}

.homeAmbience--gridItem:nth-of-type(5n + 1) {
    grid-column: span 2 !important;
    grid-row: span 2 !important;
    aspect-ratio: 1.49 !important;
}

.homeAmbience--gridItem:nth-of-type(5n + 3) {
    grid-row: span 2;
}

.homeAmbience--gridItem:nth-of-type(5n + 4) {
    grid-row: span 2;
}

@media (min-width: 1024px) {
    .homeAmbience--gridItem:nth-of-type(5n + 1) {
        grid-row: span 1 !important;
        aspect-ratio: 3.82 !important;
    }
}

.homeSpecials--gridItem:nth-of-type(5n + 1) {
    grid-row: span 2 !important;
}

.homeSpecials--gridItem:nth-of-type(5n + 2) {
    aspect-ratio: 1.49 !important;
}

.homeSpecials--gridItem:nth-of-type(5n + 3) {
    grid-row: span 2 !important;
}

.homeSpecials--gridItem:nth-of-type(5n + 5) {
    grid-column: span 2 !important;
    grid-row: span 2 !important;
}

.homeSpecials--gridItem:nth-of-type(5n + 5) > div {
    justify-content: center !important;
    align-items: center !important;
    text-align: center !important;
}

@media (min-width: 1024px) {
    .homeSpecials--gridItem:nth-of-type(5n + 2) {
        aspect-ratio: 3.82 !important;
    }
}

@media (min-width: 768px) {
    .homeSpecials--gridItem:nth-of-type(5n + 5) {
        grid-row: span 1 !important;
    }
}

.homeTestimonials--swiperPrev .swiper-button-lock,
.homeTestimonials--swiperNext .swiper-button-lock {
    opacity: 0.5 !important;
    display: flex !important;
}

.aboutHero--title h1 {
    display: flex !important;
    flex-direction: column !important;
    gap: 0.375rem !important;
}

@media (min-width: 1024px) {
    .aboutHero--title h1 {
        gap: 0.75rem !important;
    }
}

.aboutHero--title u {
    @apply no-underline;
}

.aboutHero--title u + br + u {
    text-align: right !important;
}

.fade-entered,
.fade-exited {
    transition: opacity 0.3s;
}
.fade-entering,
.fade-exiting {
    opacity: 0;
}

.scaleBtnArrow-entering,
.scaleBtnArrow-exiting {
    transition:
        opacity 0.2s ease,
        width 0.2s ease;
}
.scaleBtnArrow-entering,
.scaleBtnArrow-exiting {
    opacity: 0;
    width: 0;
}
</style>
