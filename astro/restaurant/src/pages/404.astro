---
import Btn from '../components/Btn';
import Layout from '../layouts/Layout.astro';
---

<Layout title={'Page Not Found'}>
    <div class="flex flex-col items-center gap-6 justify-center my-auto min-h-[400px] lg:gap-10">
        <h1 class="text-3xl font-semibold text-center md:text-4xl lg:text-5xl">
            Page Not Found
        </h1>
        <Btn
            theme="accent"
            size="sm"
            to="/"
            className="px-4 py-[13px] md:px-6 md:py-4"
        >
            Go back home
        </Btn>
    </div>
</Layout>
